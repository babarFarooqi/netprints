<UserControl x:Class="NetPrintsEditor.Controls.SuggestionListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetPrintsEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="item">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
        </Grid.RowDefinitions>
        
        <Image Source="{Binding ElementName=item, Path=IconPath}" VerticalAlignment="Stretch" Grid.Column="0" />
        <TextBlock Text="{Binding ElementName=item, Path=Text}" Height="Auto" Grid.Column="1" Margin="2,0,0,0" />
    </Grid>
</UserControl>
